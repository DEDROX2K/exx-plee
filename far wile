float sas=0;
float sos=0;
float speed=30;
void setup(){
  size(800,800);
  
println(sas);

}

void draw(){
  background(#ffcb8e); 
  
  sas = 0;
  while (sas<width || sos<height){
    
   sas = sas+speed; 
   sos = sos+speed;     

   fill(#e97171);
   rect(sas,sos,30,30);
   

 }
 }
 
 
 
 
